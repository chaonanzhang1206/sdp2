<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="team4.sdp.uconn.sdp2018_team4.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/mainActivity_Button_MusicIcon"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@mipmap/icon_music" />
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/MainActivity_Button_MusicIcon"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@mipmap/icon_music" />

        <ImageButton
            android:id="@+id/MainActivity_Button_VideoIcon"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@mipmap/icon_video" />
        <ImageButton
            android:id="@+id/MainActivity_Button_HomeIcon"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@mipmap/icon_home" />
    </LinearLayout>

</LinearLayout>