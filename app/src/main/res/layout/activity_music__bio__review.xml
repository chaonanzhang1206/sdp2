<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team4.sdp.uconn.sdp2018_team4.Music_Bio_Review">
    <LinearLayout android:id="@+id/LinearLayout01"
        android:layout_height="wrap_content" android:padding="10dip"
        android:layout_width="fill_parent"
        android:orientation="horizontal">

        <ImageView android:id="@+id/artistImage"
            android:layout_alignParentTop="true"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:text="no image"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/artistBioTitle"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="Artist Biography"
            android:layout_height="100dip"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dip" >

            <Button
                android:id="@+id/closeWindow"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:background="@null"
                android:gravity="top|right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp" />

    <ScrollView android:paddingLeft="5px" android:id="@+id/artistBioScroller"
        android:layout_height="200dip" android:layout_width="fill_parent">
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:layout_margin="10dip"
            android:id="@+id/TextLayout" >
            <TextView
                android:id="@+id/artistBioText"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"

                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:width="0px"
                android:text="Not done yet"
                />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
